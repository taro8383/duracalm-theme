{{ 'customer.css' | asset_url | stylesheet_tag }}

<script src="{{ 'customer.js' | asset_url }}" defer></script>

{%- style -%}
  /* Section background - eliminate white spaces */
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.section_bg_color }} !important;
    width: 100% !important;
    max-width: 100% !important;
    margin: 0 !important;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0 !important;
    min-height: auto !important;
  }

  /* Addresses container styling */
  .customer.addresses.section-{{ section.id }}-padding {
    max-width: {{ section.settings.container_max_width }}px !important;
    margin: {{ section.settings.container_margin_top }}px auto {{ section.settings.container_margin_bottom }}px auto !important;
    background: {{ section.settings.container_bg_color }} !important;
    padding: {{ section.settings.container_padding }}px !important;
    border-radius: {{ section.settings.container_border_radius }}px !important;
    box-shadow: {% if section.settings.show_shadow %}0 4px 20px rgba(0, 0, 0, 0.08){% else %}none{% endif %} !important;
  }

  /* Page header */
  .customer.addresses > h1 {
    color: {{ section.settings.heading_color }} !important;
    font-size: {{ section.settings.heading_font_size }}px !important;
    font-weight: {{ section.settings.heading_font_weight }} !important;
    margin-bottom: 8px !important;
    margin-top: 0 !important;
  }

  /* Return link */
  .customer.addresses > a[href*="account"] {
    display: inline-flex !important;
    align-items: center !important;
    gap: 8px !important;
    color: {{ section.settings.link_color }} !important;
    font-size: {{ section.settings.link_font_size }}px !important;
    text-decoration: {{ section.settings.link_text_decoration }} !important;
    margin-bottom: {{ section.settings.heading_margin_bottom }}px !important;
    transition: color 0.3s ease !important;
  }

  .customer.addresses > a[href*="account"]:hover {
    color: {{ section.settings.link_hover_color }} !important;
  }

  /* Add new address button */
  .customer.addresses > div[data-address] > button[aria-controls="AddAddress"] {
    display: {% if section.settings.button_full_width %}block{% else %}inline-block{% endif %} !important;
    width: {% if section.settings.button_full_width %}100%{% else %}auto{% endif %} !important;
    text-align: center !important;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px !important;
    font-size: {{ section.settings.button_font_size }}px !important;
    font-weight: {{ section.settings.button_font_weight }} !important;
    letter-spacing: {{ section.settings.button_letter_spacing | divided_by: 100.0 }}em !important;
    text-decoration: none !important;
    text-transform: {{ section.settings.button_text_transform }} !important;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }} !important;
    border-radius: {{ section.settings.button_border_radius }}px !important;
    color: {{ section.settings.button_text_color }} !important;
    background: {{ section.settings.button_bg_color }} !important;
    cursor: pointer !important;
    transition: all {{ section.settings.button_transition_duration | divided_by: 10.0 }}s cubic-bezier(0.4, 0, 0.2, 1) !important;
    position: relative !important;
    overflow: hidden !important;
    margin-bottom: 30px !important;
  }

  {% if section.settings.button_gradient_hover %}
  .customer.addresses > div[data-address] > button[aria-controls="AddAddress"]::before {
    content: '' !important;
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    background: linear-gradient(135deg, {{ section.settings.button_gradient_start }}, {{ section.settings.button_gradient_middle }}, {{ section.settings.button_gradient_end }}) !important;
    opacity: 0 !important;
    transition: opacity {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease !important;
    z-index: 0 !important;
  }

  .customer.addresses > div[data-address] > button[aria-controls="AddAddress"]:hover::before {
    opacity: 1 !important;
  }

  .customer.addresses > div[data-address] > button[aria-controls="AddAddress"]:hover {
    color: {{ section.settings.button_hover_text_color }} !important;
    border-color: {{ section.settings.button_hover_border_color }} !important;
    transform: translateY({{ section.settings.button_hover_translate_y }}px) !important;
    box-shadow: {% if section.settings.button_hover_shadow %}0 10px 20px {{ section.settings.button_hover_shadow_color | color_modify: 'alpha', 0.3 }}{% else %}none{% endif %} !important;
  }

  .customer.addresses > div[data-address] > button[aria-controls="AddAddress"] * {
    position: relative !important;
    z-index: 1 !important;
  }
  {% else %}
  .customer.addresses > div[data-address] > button[aria-controls="AddAddress"]:hover {
    background: {{ section.settings.button_hover_bg_color }} !important;
    color: {{ section.settings.button_hover_text_color }} !important;
    border-color: {{ section.settings.button_hover_border_color }} !important;
    transform: translateY({{ section.settings.button_hover_translate_y }}px) !important;
    box-shadow: {% if section.settings.button_hover_shadow %}0 10px 20px {{ section.settings.button_hover_shadow_color | color_modify: 'alpha', 0.3 }}{% else %}none{% endif %} !important;
  }
  {% endif %}

  /* Add Address Form */
  #AddAddress {
    background: {{ section.settings.form_bg_color }} !important;
    padding: 30px !important;
    border-radius: {{ section.settings.container_border_radius }}px !important;
    margin-bottom: 30px !important;
  }

  #AddAddress h2 {
    color: {{ section.settings.subheading_color }} !important;
    font-size: {{ section.settings.subheading_font_size }}px !important;
    font-weight: {{ section.settings.heading_font_weight }} !important;
    margin-bottom: 24px !important;
    margin-top: 0 !important;
  }

  /* Address forms grid */
  .customer.addresses form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
  }

  @media screen and (max-width: 750px) {
    .customer.addresses form {
      grid-template-columns: 1fr;
    }
  }

  /* Form fields */
  .customer.addresses .field {
    margin-bottom: 0 !important;
  }

  .customer.addresses .field input {
    border-radius: {{ section.settings.input_border_radius }}px !important;
    border: {{ section.settings.input_border_width }}px solid {{ section.settings.input_border_color }} !important;
    padding: {{ section.settings.input_padding }}px !important;
    font-size: {{ section.settings.input_font_size }}px !important;
    background-color: {{ section.settings.input_bg_color }} !important;
    color: {{ section.settings.input_text_color }} !important;
    transition: border-color 0.3s ease, box-shadow 0.3s ease !important;
    width: 100% !important;
  }

  .customer.addresses .field input:focus {
    border-color: {{ section.settings.input_focus_border_color }} !important;
    box-shadow: 0 0 0 3px {{ section.settings.input_focus_border_color | color_modify: 'alpha', 0.15 }} !important;
    outline: none !important;
  }

  .customer.addresses .field label {
    color: {{ section.settings.label_color }} !important;
    font-size: {{ section.settings.label_font_size }}px !important;
  }

  /* Country/Province selects */
  .customer.addresses .select {
    position: relative !important;
  }

  .customer.addresses .select select {
    width: 100% !important;
    border-radius: {{ section.settings.input_border_radius }}px !important;
    border: {{ section.settings.input_border_width }}px solid {{ section.settings.input_border_color }} !important;
    padding: {{ section.settings.input_padding }}px {{ section.settings.input_padding }}px {{ section.settings.input_padding }}px 16px !important;
    font-size: {{ section.settings.input_font_size }}px !important;
    background-color: {{ section.settings.input_bg_color }} !important;
    color: {{ section.settings.input_text_color }} !important;
    appearance: none !important;
    cursor: pointer !important;
  }

  .customer.addresses .select svg {
    position: absolute !important;
    right: 12px !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    width: 10px !important;
    height: 6px !important;
    pointer-events: none !important;
  }

  .customer.addresses label[for*="Country"],
  .customer.addresses label[for*="Province"] {
    display: block !important;
    color: {{ section.settings.label_color }} !important;
    font-size: {{ section.settings.label_font_size }}px !important;
    margin-bottom: 8px !important;
  }

  /* Checkbox styling */
  .customer.addresses input[type="checkbox"] {
    width: 18px !important;
    height: 18px !important;
    accent-color: {{ section.settings.button_border_color }} !important;
  }

  .customer.addresses label[for*="default"] {
    color: {{ section.settings.text_color }} !important;
    font-size: {{ section.settings.text_font_size }}px !important;
    margin-left: 8px !important;
  }

  /* Form buttons container */
  .customer.addresses form > div:last-child {
    grid-column: 1 / -1;
    display: flex;
    gap: 12px;
    margin-top: 16px;
  }

  @media screen and (max-width: 750px) {
    .customer.addresses form > div:last-child {
      flex-direction: column;
    }
  }

  /* Submit and Cancel buttons */
  .customer.addresses form button[type="submit"],
  .customer.addresses form button[type="reset"] {
    flex: 1;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px !important;
    font-size: {{ section.settings.button_font_size }}px !important;
    font-weight: {{ section.settings.button_font_weight }} !important;
    letter-spacing: {{ section.settings.button_letter_spacing | divided_by: 100.0 }}em !important;
    text-transform: {{ section.settings.button_text_transform }} !important;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }} !important;
    border-radius: {{ section.settings.button_border_radius }}px !important;
    cursor: pointer !important;
    transition: all {{ section.settings.button_transition_duration | divided_by: 10.0 }}s cubic-bezier(0.4, 0, 0.2, 1) !important;
    position: relative !important;
    overflow: hidden !important;
  }

  .customer.addresses form button[type="submit"] {
    color: {{ section.settings.button_text_color }} !important;
    background: {{ section.settings.button_bg_color }} !important;
  }

  .customer.addresses form button[type="reset"] {
    color: {{ section.settings.text_color }} !important;
    background: transparent !important;
    border-color: {{ section.settings.divider_color }} !important;
  }

  {% if section.settings.button_gradient_hover %}
  .customer.addresses form button[type="submit"]::before {
    content: '' !important;
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    background: linear-gradient(135deg, {{ section.settings.button_gradient_start }}, {{ section.settings.button_gradient_middle }}, {{ section.settings.button_gradient_end }}) !important;
    opacity: 0 !important;
    transition: opacity {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease !important;
    z-index: 0 !important;
  }

  .customer.addresses form button[type="submit"]:hover::before {
    opacity: 1 !important;
  }

  .customer.addresses form button[type="submit"]:hover {
    color: {{ section.settings.button_hover_text_color }} !important;
    border-color: {{ section.settings.button_hover_border_color }} !important;
    transform: translateY({{ section.settings.button_hover_translate_y }}px) !important;
    box-shadow: {% if section.settings.button_hover_shadow %}0 10px 20px {{ section.settings.button_hover_shadow_color | color_modify: 'alpha', 0.3 }}{% else %}none{% endif %} !important;
  }
  {% else %}
  .customer.addresses form button[type="submit"]:hover {
    background: {{ section.settings.button_hover_bg_color }} !important;
    color: {{ section.settings.button_hover_text_color }} !important;
    border-color: {{ section.settings.button_hover_border_color }} !important;
    transform: translateY({{ section.settings.button_hover_translate_y }}px) !important;
  }
  {% endif %}

  .customer.addresses form button[type="reset"]:hover {
    border-color: {{ section.settings.button_border_color }} !important;
    color: {{ section.settings.button_border_color }} !important;
  }

  /* Address list */
  .customer.addresses > ul[role="list"] {
    list-style: none !important;
    padding: 0 !important;
    margin: 0 !important;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
  }

  .customer.addresses > ul[role="list"] > li {
    background: {{ section.settings.address_card_bg }} !important;
    padding: 24px !important;
    border-radius: {{ section.settings.container_border_radius }}px !important;
    border: 1px solid {{ section.settings.divider_color }} !important;
    position: relative !important;
  }

  .customer.addresses > ul[role="list"] > li h2 {
    color: {{ section.settings.subheading_color }} !important;
    font-size: 16px !important;
    font-weight: {{ section.settings.heading_font_weight }} !important;
    margin: 0 0 12px 0 !important;
    padding: 4px 12px !important;
    background: {{ section.settings.button_border_color }} !important;
    color: {{ section.settings.button_text_color }} !important;
    border-radius: 4px !important;
    display: inline-block !important;
  }

  .customer.addresses > ul[role="list"] address {
    font-style: normal !important;
    line-height: 1.6 !important;
    color: {{ section.settings.text_color }} !important;
    font-size: {{ section.settings.text_font_size }}px !important;
    margin-bottom: 16px !important;
  }

  /* Edit/Delete buttons on cards */
  .customer.addresses > ul[role="list"] > li > button {
    padding: 8px 16px !important;
    font-size: 14px !important;
    font-weight: {{ section.settings.button_font_weight }} !important;
    border-radius: {{ section.settings.button_border_radius }}px !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    margin-right: 8px !important;
  }

  .customer.addresses > ul[role="list"] > li > button:first-of-type {
    background: {{ section.settings.button_bg_color }} !important;
    color: {{ section.settings.button_text_color }} !important;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }} !important;
  }

  .customer.addresses > ul[role="list"] > li > button:first-of-type:hover {
    background: {{ section.settings.button_hover_bg_color }} !important;
    color: {{ section.settings.button_hover_text_color }} !important;
  }

  .customer.addresses > ul[role="list"] > li > button:last-of-type {
    background: transparent !important;
    color: {{ section.settings.error_color }} !important;
    border: 1px solid {{ section.settings.error_color }} !important;
  }

  .customer.addresses > ul[role="list"] > li > button:last-of-type:hover {
    background: {{ section.settings.error_color }} !important;
    color: #ffffff !important;
  }

  /* Edit address form inside cards */
  .customer.addresses > ul[role="list"] > li > div[id*="EditAddress"] {
    margin-top: 20px !important;
    padding-top: 20px !important;
    border-top: 1px solid {{ section.settings.divider_color }} !important;
  }

  .customer.addresses > ul[role="list"] > li > div[id*="EditAddress"] h2 {
    background: transparent !important;
    color: {{ section.settings.subheading_color }} !important;
    padding: 0 !important;
    font-size: {{ section.settings.subheading_font_size }}px !important;
    margin-bottom: 20px !important;
  }

  /* Pagination */
  .customer.addresses .pagination {
    margin-top: 30px !important;
  }

  .customer.addresses .pagination ul {
    display: flex !important;
    list-style: none !important;
    padding: 0 !important;
    margin: 0 !important;
    gap: 8px !important;
    justify-content: center !important;
  }

  .customer.addresses .pagination a,
  .customer.addresses .pagination span {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    width: 40px !important;
    height: 40px !important;
    border-radius: {{ section.settings.input_border_radius }}px !important;
    background: {{ section.settings.input_bg_color }} !important;
    color: {{ section.settings.text_color }} !important;
    text-decoration: none !important;
    font-size: {{ section.settings.text_font_size }}px !important;
    transition: all 0.3s ease !important;
    border: 1px solid {{ section.settings.input_border_color }} !important;
  }

  .customer.addresses .pagination a:hover {
    background: {{ section.settings.button_hover_bg_color }} !important;
    color: {{ section.settings.button_hover_text_color }} !important;
    border-color: {{ section.settings.button_hover_border_color }} !important;
  }

  .customer.addresses .pagination span[aria-current="page"] {
    background: {{ section.settings.button_bg_color }} !important;
    color: {{ section.settings.button_text_color }} !important;
    border-color: {{ section.settings.button_border_color }} !important;
  }
{%- endstyle -%}

{%- paginate customer.addresses by 5 -%}
  <div class="customer addresses section-{{ section.id }}-padding" data-customer-addresses>
    <svg style="display: none">
      <symbol id="icon-caret" viewBox="0 0 10 6">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
      </symbol>
    </svg>
    <h1>{{ 'customer.addresses.title' | t }}</h1>
    <a href="{{ routes.account_url }}">
      {{ 'customer.account.return' | t }}
    </a>

    <div data-address>
      <button
        type="button"
        aria-expanded="false"
        aria-controls="AddAddress"
      >
        {{ 'customer.addresses.add_new' | t }}
      </button>
      <div id="AddAddress">
        <h2 id="AddressNewHeading">{{ 'customer.addresses.add_new' | t }}</h2>
        {%- form 'customer_address', customer.new_address, aria-labelledBy: 'AddressNewHeading' -%}
          <div class="field">
            <input
              type="text"
              id="AddressFirstNameNew"
              name="address[first_name]"
              value="{{ form.first_name }}"
              autocomplete="given-name"
              placeholder="{{ 'customer.addresses.first_name' | t }}"
            >
            <label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
          </div>
          <div class="field">
            <input
              type="text"
              id="AddressLastNameNew"
              name="address[last_name]"
              value="{{ form.last_name }}"
              autocomplete="family-name"
              placeholder="{{ 'customer.addresses.last_name' | t }}"
            >
            <label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
          </div>
          <div class="field">
            <input
              type="text"
              id="AddressCompanyNew"
              name="address[company]"
              value="{{ form.company }}"
              autocomplete="organization"
              placeholder="{{ 'customer.addresses.company' | t }}"
            >
            <label for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
          </div>
          <div class="field">
            <input
              type="text"
              id="AddressAddress1New"
              name="address[address1]"
              value="{{ form.address1 }}"
              autocomplete="address-line1"
              placeholder="{{ 'customer.addresses.address1' | t }}"
            >
            <label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
          </div>
          <div class="field">
            <input
              type="text"
              id="AddressAddress2New"
              name="address[address2]"
              value="{{ form.address2 }}"
              autocomplete="address-line2"
              placeholder="{{ 'customer.addresses.address2' | t }}"
            >
            <label for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
          </div>
          <div class="field">
            <input
              type="text"
              id="AddressCityNew"
              name="address[city]"
              value="{{ form.city }}"
              autocomplete="address-level2"
              placeholder="{{ 'customer.addresses.city' | t }}"
            >
            <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
          </div>
          <div>
            <label for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
            <div class="select">
              <select
                id="AddressCountryNew"
                name="address[country]"
                data-default="{{ form.country }}"
                autocomplete="country"
              >
                {{ all_country_option_tags }}
              </select>
              <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                <use href="#icon-caret" />
              </svg>
            </div>
          </div>
          <div id="AddressProvinceContainerNew" style="display: none">
            <label for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
            <div class="select">
              <select
                id="AddressProvinceNew"
                name="address[province]"
                data-default="{{ form.province }}"
                autocomplete="address-level1"
              ></select>
              <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                <use href="#icon-caret" />
              </svg>
            </div>
          </div>
          <div class="field">
            <input
              type="text"
              id="AddressZipNew"
              name="address[zip]"
              value="{{ form.zip }}"
              autocapitalize="characters"
              autocomplete="postal-code"
              placeholder="{{ 'customer.addresses.zip' | t }}"
            >
            <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
          </div>
          <div class="field">
            <input
              type="tel"
              id="AddressPhoneNew"
              name="address[phone]"
              value="{{ form.phone }}"
              autocomplete="tel"
              placeholder="{{ 'customer.addresses.phone' | t }}"
            >
            <label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
          </div>
          <div>
            {{ form.set_as_default_checkbox }}
            <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
          </div>
          <div>
            <button>{{ 'customer.addresses.add' | t }}</button>
            <button type="reset">{{ 'customer.addresses.cancel' | t }}</button>
          </div>
        {%- endform -%}
      </div>
    </div>

    <ul role="list">
      {%- for address in customer.addresses -%}
        <li data-address>
          {%- if address == customer.default_address -%}
            <h2>{{ 'customer.addresses.default' | t }}</h2>
          {%- endif -%}
          {{ address | format_address }}
          <button
            type="button"
            id="EditFormButton_{{ address.id }}"
            aria-label="{{ 'customer.addresses.edit_address' | t }} {{ forloop.index }}"
            aria-controls="EditAddress_{{ address.id }}"
            aria-expanded="false"
            data-address-id="{{ address.id }}"
          >
            {{ 'customer.addresses.edit' | t }}
          </button>
          <button
            type="button"
            aria-label="{{ 'customer.addresses.delete' | t }} {{ forloop.index }}"
            data-target="{{ address.url }}"
            data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
          >
            {{ 'customer.addresses.delete' | t }}
          </button>
          <div id="EditAddress_{{ address.id }}">
            <h2>{{ 'customer.addresses.edit_address' | t }}</h2>
            {%- form 'customer_address', address -%}
              <div class="field">
                <input
                  type="text"
                  id="AddressFirstName_{{ form.id }}"
                  name="address[first_name]"
                  value="{{ form.first_name }}"
                  autocomplete="given-name"
                  placeholder="{{ 'customer.addresses.first_name' | t }}"
                >
                <label for="AddressFirstName_{{ form.id }}">{{ 'customer.addresses.first_name' | t }}</label>
              </div>
              <div class="field">
                <input
                  type="text"
                  id="AddressLastName_{{ form.id }}"
                  name="address[last_name]"
                  value="{{ form.last_name }}"
                  autocomplete="family-name"
                  placeholder="{{ 'customer.addresses.last_name' | t }}"
                >
                <label for="AddressLastName_{{ form.id }}">{{ 'customer.addresses.last_name' | t }}</label>
              </div>
              <div class="field">
                <input
                  type="text"
                  id="AddressCompany_{{ form.id }}"
                  name="address[company]"
                  value="{{ form.company }}"
                  autocomplete="organization"
                  placeholder="{{ 'customer.addresses.company' | t }}"
                >
                <label for="AddressCompany_{{ form.id }}">{{ 'customer.addresses.company' | t }}</label>
              </div>
              <div class="field">
                <input
