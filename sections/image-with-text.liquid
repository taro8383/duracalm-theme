                      {%- when 'pill' -%}
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M4.22 11.29l6.27-6.27c.93-.93 2.44-.93 3.37 0l5.08 5.08c.93.93.93 2.44 0 3.37l-6.27 6.27c-.93.93-2.44.93-3.37 0l-5.08-5.08c-.93-.93-.93-2.44 0-3.37zm1.41 1.41l5.08 5.08c.35.35.93.35 1.28 0l6.27-6.27c.35-.35.35-.93 0-1.28l-5.08-5.08c-.35-.35-.93-.35-1.28 0l-6.27 6.27c-.35.35-.35.93 0 1.28zm6.87-1.41c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1z"/></svg>
                      {%- when 'shield' -%}
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/></svg>
                      {%- when 'warning' -%}
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/></svg>
                      {%- when 'lightbulb' -%}
