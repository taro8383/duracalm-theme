{%- style -%}
  /* Section Background Custom Colors */
  .color-scheme-{{ section.id }}.color-custom {
    --color-background: {{ section.settings.custom_colors_background.red }}, {{ section.settings.custom_colors_background.green }}, {{ section.settings.custom_colors_background.blue }};
    --gradient-background: {% if section.settings.custom_gradient_background != blank %}{{ section.settings.custom_gradient_background }}{% else %}{{ section.settings.custom_colors_background }}{% endif %};
    {% if section.settings.custom_image_background != blank %}
      {% # theme-check-disable %}
      --gradient-background: url('{{ section.settings.custom_image_background | img_url: 'master' }}') center center / cover no-repeat;
      {% # theme-check-enable %}
    {% endif %}
    --color-foreground: {{ section.settings.custom_colors_text.red }}, {{ section.settings.custom_colors_text.green }}, {{ section.settings.custom_colors_text.blue }};
  }
  {% if section.settings.custom_mobile_image_background != blank %}
    @media screen and (max-width: 740px) {
      .color-scheme-{{ section.id }}.color-custom {
        {% # theme-check-disable %}
        --gradient-background: url('{{ section.settings.custom_mobile_image_background | img_url: 'master' }}') center center / cover no-repeat;
        {% # theme-check-enable %}
      }
    }
  {% endif %}

  /* Cart Footer Container */
  #main-cart-footer {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #main-cart-footer {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .cart__footer {
    {% if section.settings.footer_border_width > 0 %}
    border: {{ section.settings.footer_border_width }}px solid {{ section.settings.footer_border_color }};
    {% endif %}
    border-radius: {{ section.settings.footer_border_radius }}px;
    {% if section.settings.footer_shadow %}
    box-shadow: {{ section.settings.footer_shadow_x }}px {{ section.settings.footer_shadow_y }}px {{ section.settings.footer_shadow_blur }}px {{ section.settings.footer_shadow_color }};
    {% endif %}
    background-color: {{ section.settings.footer_bg_color }};
    padding: {{ section.settings.footer_padding_v }}px {{ section.settings.footer_padding_h }}px;
  }

  /* Cart Note */
  .cart__note {
    {% if section.settings.show_note == false %}display: none !important;{% endif %}
    margin-bottom: {{ section.settings.note_margin_bottom }}px;
  }

  .cart__note label {
    font-size: {{ section.settings.note_label_font_size }}px;
    font-weight: {{ section.settings.note_label_font_weight }};
    color: {{ section.settings.note_label_color }};
    margin-bottom: {{ section.settings.note_label_margin_bottom }}px;
    display: block;
  }

  .cart__note .text-area {
    background-color: {{ section.settings.note_input_bg_color }};
    border: {{ section.settings.note_input_border_width }}px solid {{ section.settings.note_input_border_color }};
    border-radius: {{ section.settings.note_input_border_radius }}px;
    color: {{ section.settings.note_input_text_color }};
    font-size: {{ section.settings.note_input_font_size }}px;
    min-height: {{ section.settings.note_input_height }}px;
    padding: {{ section.settings.note_input_padding_v }}px {{ section.settings.note_input_padding_h }}px;
    resize: {{ section.settings.note_input_resize }};
  }

  .cart__note .text-area::placeholder {
    color: {{ section.settings.note_input_placeholder_color }};
  }

  .cart__note .text-area:focus {
    border-color: {{ section.settings.note_input_focus_border_color }};
    outline: none;
  }

  /* Cart Blocks Container */
  .cart__blocks {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.blocks_gap }}px;
  }

  /* Subtotal Section */
  .totals {
    display: flex;
    justify-content: {{ section.settings.subtotal_alignment }};
    align-items: center;
    gap: {{ section.settings.subtotal_gap }}px;
    padding: {{ section.settings.subtotal_padding_v }}px {{ section.settings.subtotal_padding_h }}px;
    {% if section.settings.subtotal_border_width > 0 %}
    border-bottom: {{ section.settings.subtotal_border_width }}px solid {{ section.settings.subtotal_border_color }};
    {% endif %}
  }

  .totals__subtotal {
    font-size: {{ section.settings.subtotal_label_font_size }}px;
    font-weight: {{ section.settings.subtotal_label_font_weight }};
    color: {{ section.settings.subtotal_label_color }};
    {% if section.settings.subtotal_label_uppercase %}text-transform: uppercase;{% endif %}
    letter-spacing: {{ section.settings.subtotal_label_letter_spacing }}em;
    margin: 0;
  }

  .totals__subtotal-value {
    font-size: {{ section.settings.subtotal_value_font_size }}px;
    font-weight: {{ section.settings.subtotal_value_font_weight }};
    color: {{ section.settings.subtotal_value_color }};
    margin: 0;
  }

  /* Cart Level Discounts */
  .cart__blocks .discounts__discount--position {
    font-size: {{ section.settings.cart_discount_font_size }}px;
    color: {{ section.settings.cart_discount_color }};
    background-color: {{ section.settings.cart_discount_bg_color }};
    padding: {{ section.settings.cart_discount_padding_v }}px {{ section.settings.cart_discount_padding_h }}px;
    border-radius: {{ section.settings.cart_discount_border_radius }}px;
    margin-bottom: {{ section.settings.cart_discount_margin_bottom }}px;
    {% if section.settings.cart_discount_uppercase %}text-transform: uppercase;{% endif %}
    {% if section.settings.cart_discount_show_icon == false %}
    .icon-discount { display: none; }
    {% endif %}
  }

  /* Discount Field Block */
  .cart-discount {
    margin-top: var(--margin-top);
    margin-bottom: var(--margin-bottom);
    {% if section.settings.discount_field_border_width > 0 %}
    border: {{ section.settings.discount_field_border_width }}px solid {{ section.settings.discount_field_border_color }};
    {% endif %}
    border-radius: {{ section.settings.discount_field_border_radius }}px;
    padding: {{ section.settings.discount_field_padding_v }}px {{ section.settings.discount_field_padding_h }}px;
    background-color: {{ section.settings.discount_field_bg_color }};
  }

  .cart-discount-form__row {
    display: flex;
    gap: {{ section.settings.discount_input_gap }}px;
  }

  .cart-discount-form__row .field {
    flex: 1;
  }

  .cart-discount-form__row .field__input {
    background-color: {{ section.settings.discount_input_bg_color }};
    border: {{ section.settings.discount_input_border_width }}px solid {{ section.settings.discount_input_border_color }};
    border-radius: {{ section.settings.discount_input_border_radius }}px;
    color: {{ section.settings.discount_input_text_color }};
    font-size: {{ section.settings.discount_input_font_size }}px;
    height: {{ section.settings.discount_input_height }}px;
    padding: 0 {{ section.settings.discount_input_padding_h }}px;
  }

  .cart-discount-form__row .field__input::placeholder {
    color: {{ section.settings.discount_input_placeholder_color }};
  }

  .cart-discount-form__row .field__label {
    font-size: {{ section.settings.discount_input_label_font_size }}px;
    color: {{ section.settings.discount_input_label_color }};
  }

  .cart-discount-form__row .button {
    background-color: {{ section.settings.discount_btn_bg_color }};
    color: {{ section.settings.discount_btn_text_color }};
    border: {{ section.settings.discount_btn_border_width }}px solid {{ section.settings.discount_btn_border_color }};
    border-radius: {{ section.settings.discount_btn_border_radius }}px;
    font-size: {{ section.settings.discount_btn_font_size }}px;
    font-weight: {{ section.settings.discount_btn_font_weight }};
    padding: 0 {{ section.settings.discount_btn_padding_h }}px;
    height: {{ section.settings.discount_btn_height }}px;
    {% if section.settings.discount_btn_uppercase %}text-transform: uppercase;{% endif %}
  }

  .cart-discount-form__row .button:hover {
    background-color: {{ section.settings.discount_btn_bg_hover_color }};
    color: {{ section.settings.discount_btn_text_hover_color }};
    border-color: {{ section.settings.discount_btn_border_hover_color }};
  }

  .cart-discount-form__error {
    color: {{ section.settings.discount_error_color }};
    font-size: {{ section.settings.discount_error_font_size }}px;
    margin-top: {{ section.settings.discount_error_margin_top }}px;
    {% if section.settings.discount_error_show %}display: block;{% else %}display: none;{% endif %}
  }

  /* Update Button */
  .cart__update-button {
    background-color: {{ section.settings.update_btn_bg_color }};
    color: {{ section.settings.update_btn_text_color }};
    border: {{ section.settings.update_btn_border_width }}px solid {{ section.settings.update_btn_border_color }};
    border-radius: {{ section.settings.update_btn_border_radius }}px;
    font-size: {{ section.settings.update_btn_font_size }}px;
    font-weight: {{ section.settings.update_btn_font_weight }};
    padding: {{ section.settings.update_btn_padding_v }}px {{ section.settings.update_btn_padding_h }}px;
    width: {% if section.settings.update_btn_full_width %}100%{% else %}auto{% endif %};
    {% if section.settings.update_btn_uppercase %}text-transform: uppercase;{% endif %}
  }

  .cart__update-button:hover {
    background-color: {{ section.settings.update_btn_bg_hover_color }};
    color: {{ section.settings.update_btn_text_hover_color }};
    border-color: {{ section.settings.update_btn_border_hover_color }};
  }

  {% if section.settings.show_update_button == false %}
  .cart__update-button { display: none !important; }
  {% endif %}

  /* Checkout Button - Regular Style */
  {% if section.settings.checkout_btn_style == 'default' %}
  .cart__checkout-button {
    background-color: {{ section.settings.checkout_btn_bg_color }};
    color: {{ section.settings.checkout_btn_text_color }};
    border: {{ section.settings.checkout_btn_border_width }}px solid {{ section.settings.checkout_btn_border_color }};
    border-radius: {{ section.settings.checkout_btn_border_radius }}px;
    font-size: {{ section.settings.checkout_btn_font_size }}px;
    font-weight: {{ section.settings.checkout_btn_font_weight }};
    padding: {{ section.settings.checkout_btn_padding_v }}px {{ section.settings.checkout_btn_padding_h }}px;
    width: {% if section.settings.checkout_btn_full_width %}100%{% else %}auto{% endif %};
    {% if section.settings.checkout_btn_uppercase %}text-transform: uppercase;{% endif %}
    letter-spacing: {{ section.settings.checkout_btn_letter_spacing }}em;
    transition: all {{ section.settings.checkout_btn_transition_speed }}s ease;
  }

  .cart__checkout-button:hover {
    background-color: {{ section.settings.checkout_btn_bg_hover_color }};
    color: {{ section.settings.checkout_btn_text_hover_color }};
    border-color: {{ section.settings.checkout_btn_border_hover_color }};
    {% if section.settings.checkout_btn_hover_lift > 0 %}
    transform: translateY(-{{ section.settings.checkout_btn_hover_lift }}px);
    {% endif %}
    box-shadow: {% if section.settings.checkout_btn_hover_shadow %}{{ section.settings.checkout_btn_hover_shadow_x }}px {{ section.settings.checkout_btn_hover_shadow_y }}px {{ section.settings.checkout_btn_hover_shadow_blur }}px {{ section.settings.checkout_btn_hover_shadow_color }}{% else %}none{% endif %};
  }
  {% endif %}

  /* Checkout Button - Magic Mind Style */
  {% if section.settings.checkout_btn_style == 'magic_mind' %}
  .cart__checkout-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    color: {{ section.settings.magic_mind_text_color }};
    border: {{ section.settings.magic_mind_border_width }}px solid {{ section.settings.magic_mind_border_color }};
    border-radius: {{ section.settings.magic_mind_border_radius }}px;
    font-size: {{ section.settings.checkout_btn_font_size }}px;
    font-weight: {{ section.settings.checkout_btn_font_weight }};
    padding: {{ section.settings.checkout_btn_padding_v }}px {{ section.settings.checkout_btn_padding_h }}px;
    width: {% if section.settings.checkout_btn_full_width %}100%{% else %}auto{% endif %};
    {% if section.settings.checkout_btn_uppercase %}text-transform: uppercase;{% endif %}
    letter-spacing: {{ section.settings.checkout_btn_letter_spacing }}em;
    overflow: hidden;
    z-index: 1;
    cursor: pointer;
    transition: all {{ section.settings.checkout_btn_transition_speed }}s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cart__checkout-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, {{ section.settings.magic_mind_gradient_start }} 0%, {{ section.settings.magic_mind_gradient_mid }} 50%, {{ section.settings.magic_mind_gradient_end }} 100%);
    background-size: 200% 200%;
    opacity: 0;
    transition: opacity {{ section.settings.checkout_btn_transition_speed }}s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: -1;
  }

  .cart__checkout-button:hover::before {
    opacity: 1;
    background-position: 100% 0;
  }

  .cart__checkout-button:hover {
    color: {{ section.settings.magic_mind_hover_text_color }};
    border-color: transparent;
    transform: translateY(-{{ section.settings.checkout_btn_hover_lift }}px);
    box-shadow: 0 8px 24px rgba(123, 146, 200, 0.3);
  }
  {% endif %}

  .cart__checkout-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Cart CTAs Container */
  .cart__ctas {
    display: flex;
    flex-direction: {% if section.settings.buttons_layout == 'stacked' %}column{% else %}row{% endif %};
    gap: {{ section.settings.buttons_gap }}px;
    {% if section.settings.buttons_alignment == 'center' %}justify-content: center;{% endif %}
    {% if section.settings.buttons_alignment == 'right' %}justify-content: flex-end;{% endif %}
  }

  /* Additional Checkout Buttons */
  .cart__dynamic-checkout-buttons {
    margin-top: {{ section.settings.additional_buttons_margin_top }}px;
    {% if section.settings.additional_buttons_show == false %}display: none !important;{% endif %}
  }

  /* Cart Errors */
  #cart-errors {
    color: {{ section.settings.error_color }};
    font-size: {{ section.settings.error_font_size }}px;
    margin-top: {{ section.settings.error_margin_top }}px;
    text-align: {{ section.settings.error_alignment }};
  }
{%- endstyle -%}

<div class="color-scheme-{{ section.id }} color-{{ section.settings.color_scheme }} gradient page-width{% if cart == empty %} is-empty{% endif %}" id="main-cart-footer" data-id="{{ section.id }}">
  <div>
    <div class="cart__footer">
      {%- if section.settings.show_note -%}
        <cart-note class="cart__note field">
          <label for="Cart-note">{{ section.settings.note_label }}</label>
          <textarea
            class="text-area field__input"
            name="note"
            form="cart"
            id="Cart-note"
            placeholder="{{ section.settings.note_placeholder }}"
          >{{ cart.note }}</textarea>
        </cart-note>
      {%- endif -%}

      <div class="cart__blocks">
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'subtotal' -%}
              <div class="js-contents" {{ block.shopify_attributes }}>
                <div class="totals">
                  <h2 class="totals__subtotal">{{ section.settings.subtotal_label }}</h2>
                  <p class="totals__subtotal-value">{{ cart.total_price | money_with_currency }}</p>
                </div>

                <div>
                  {%- if cart.cart_level_discount_applications.size > 0 -%}
                    <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                      {%- for discount in cart.cart_level_discount_applications -%}
                        <li class="discounts__discount discounts__discount--position">
                          {%- render 'icon-discount' -%}
                          {{ discount.title }}
                          (-{{ discount.total_allocated_amount | money }})
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </div>
              </div>
            {% when 'discount_field' %}
              {% render 'cart-discount-field', block: block %}
            {%- else -%}
              <div class="cart__ctas" {{ block.shopify_attributes }}>
                <noscript>
                  <button type="submit" class="cart__update-button button button--secondary" form="cart">
                    {{ section.settings.update_button_text }}
                  </button>
                </noscript>

                <button
                  type="submit"
                  id="checkout"
                  class="cart__checkout-button button"
                  name="checkout"
                  {% if cart == empty %}
                    disabled
                  {% endif %}
                  form="cart"
                >
                  {{ section.settings.checkout_button_text }}
                </button>
              </div>

              {%- if additional_checkout_buttons -%}
                <div class="cart__dynamic-checkout-buttons additional-checkout-buttons">
                  {{ content_for_additional_checkout_buttons }}
                </div>
              {%- endif -%}
          {%- endcase -%}
        {% endfor %}

        <div id="cart-errors"></div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    function isIE() {
      const ua = window.navigator.userAgent;
      const msie = ua.indexOf('MSIE ');
      const trident = ua.indexOf('Trident/');

      return msie > 0 || trident > 0;
    }

    if (!isIE()) return;
    const cartSubmitInput = document.createElement('input');
    cartSubmitInput.setAttribute('name', 'checkout');
    cartSubmitInput.setAttribute('type', 'hidden');
    document.querySelector('#cart').appendChild(cartSubmitInput);
    document.querySelector('#checkout').addEventListener('click', function (event) {
      document.querySelector('#cart').submit();
    });
  });
</script>

