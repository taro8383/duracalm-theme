{%- style -%}
  .cart-footer-wrapper {
    background-color: {{ section.settings.footer_bg_color }};
    padding-top: {{ section.settings.footer_padding_top }}px;
    padding-bottom: {{ section.settings.footer_padding_bottom }}px;
    margin-top: {{ section.settings.footer_margin_top }}px;
  }

  .cart-footer-container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_side_padding }}px;
  }

  .cart__footer {
    display: flex;
    flex-direction: {{ section.settings.footer_layout }};
    gap: {{ section.settings.footer_gap }}px;
    align-items: {% if section.settings.footer_layout == 'row' %}flex-start{% else %}stretch{% endif %};
  }

  @media screen and (max-width: 989px) {
    .cart__footer {
      flex-direction: column;
    }
  }

  /* Cart Note */
  .cart__note {
    flex: {% if section.settings.footer_layout == 'row' %}1{% else %}unset{% endif %};
    max-width: {% if section.settings.footer_layout == 'row' %}{{ section.settings.note_max_width }}px{% else %}100%{% endif %};
    width: 100%;
  }

  .cart__note label {
    display: block;
    font-size: {{ section.settings.note_label_font_size }}px;
    font-weight: {{ section.settings.note_label_font_weight }};
    color: {{ section.settings.note_label_color }};
    margin-bottom: {{ section.settings.note_label_margin_bottom }}px;
  }

  .cart__note .text-area {
    width: 100%;
    min-height: {{ section.settings.note_min_height }}px;
    padding: {{ section.settings.note_padding }}px;
    font-size: {{ section.settings.note_font_size }}px;
    color: {{ section.settings.note_text_color }};
    background-color: {{ section.settings.note_bg_color }};
    border: {{ section.settings.note_border_width }}px solid {{ section.settings.note_border_color }};
    border-radius: {{ section.settings.note_border_radius }}px;
    resize: vertical;
    transition: border-color {{ section.settings.note_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart__note .text-area:focus {
    outline: none;
    border-color: {{ section.settings.note_focus_border_color }};
  }

  .cart__note .text-area::placeholder {
    color: {{ section.settings.note_placeholder_color }};
  }

  /* Cart Blocks */
  .cart__blocks {
    flex: {% if section.settings.footer_layout == 'row' %}0 0 {{ section.settings.blocks_width }}px{% else %}unset{% endif %};
    max-width: {% if section.settings.footer_layout == 'row' %}{{ section.settings.blocks_width }}px{% else %}100%{% endif %};
    width: 100%;
    background-color: {{ section.settings.blocks_bg_color }};
    padding: {{ section.settings.blocks_padding }}px;
    border-radius: {{ section.settings.blocks_border_radius }}px;
    {%- if section.settings.blocks_show_shadow -%}
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    {%- endif -%}
  }

  @media screen and (max-width: 989px) {
    .cart__blocks {
      flex: unset;
      max-width: 100%;
    }
  }

  /* Subtotal Section */
  .totals {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ section.settings.subtotal_margin_bottom }}px;
    padding-bottom: {{ section.settings.subtotal_padding_bottom }}px;
    border-bottom: {{ section.settings.subtotal_border_width }}px solid {{ section.settings.subtotal_border_color }};
  }

  .totals__subtotal {
    font-size: {{ section.settings.subtotal_label_font_size }}px;
    font-weight: {{ section.settings.subtotal_label_font_weight }};
    color: {{ section.settings.subtotal_label_color }};
    margin: 0;
  }

  .totals__subtotal-value {
    font-size: {{ section.settings.subtotal_value_font_size }}px;
    font-weight: {{ section.settings.subtotal_value_font_weight }};
    color: {{ section.settings.subtotal_value_color }};
    margin: 0;
  }

  /* Discount List */
  .cart__blocks .discounts {
    margin: {{ section.settings.discount_list_margin_top }}px 0 {{ section.settings.discount_list_margin_bottom }}px 0;
    padding: 0;
    list-style: none;
  }

  .discounts__discount--position {
    font-size: {{ section.settings.discount_item_font_size }}px;
    color: {{ section.settings.discount_item_color }};
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: {{ section.settings.discount_item_spacing }}px;
  }

  .discounts__discount--position svg {
    width: {{ section.settings.discount_icon_size }}px;
    height: {{ section.settings.discount_icon_size }}px;
    color: {{ section.settings.discount_icon_color }};
  }

  /* Cart CTAs */
  .cart__ctas {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.button_gap }}px;
    margin-top: {{ section.settings.buttons_margin_top }}px;
  }

  /* Checkout Button - Magic Mind Style */
  .cart__checkout-button {
    display: block;
    width: 100%;
    padding: {{ section.settings.checkout_padding_y }}px {{ section.settings.checkout_padding_x }}px;
    font-size: {{ section.settings.checkout_font_size }}px;
    font-weight: {{ section.settings.checkout_font_weight }};
    text-transform: {{ section.settings.checkout_text_transform }};
    letter-spacing: {{ section.settings.checkout_letter_spacing | divided_by: 100.0 }}em;
    text-decoration: none;
    text-align: center;
    border-radius: {{ section.settings.checkout_border_radius }}px;
    border: {{ section.settings.checkout_border_width }}px solid {{ section.settings.checkout_border_color }};
    background-color: {{ section.settings.checkout_bg_color }};
    color: {{ section.settings.checkout_text_color }};
    cursor: pointer;
    position: relative;
    overflow: hidden;
    z-index: 1;
    transition: transform {{ section.settings.checkout_transition_duration | divided_by: 10.0 }}s ease,
                border-color {{ section.settings.checkout_transition_duration | divided_by: 10.0 }}s ease,
                box-shadow {{ section.settings.checkout_transition_duration | divided_by: 10.0 }}s ease;
  }

  {%- if section.settings.checkout_gradient_hover -%}
  .cart__checkout-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      {{ section.settings.checkout_gradient_start }} 0%,
      {{ section.settings.checkout_gradient_middle }} 50%,
      {{ section.settings.checkout_gradient_end }} 100%
    );
    opacity: 0;
    z-index: -1;
    transition: opacity {{ section.settings.checkout_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart__checkout-button:hover::before {
    opacity: 1;
  }
  {%- endif -%}

  .cart__checkout-button:hover {
    background-color: {{ section.settings.checkout_hover_bg_color }};
    color: {{ section.settings.checkout_hover_text_color }};
    border-color: {{ section.settings.checkout_hover_border_color }};
    transform: translateY({{ section.settings.checkout_hover_translate_y }}px);
    {%- if section.settings.checkout_hover_shadow -%}
    box-shadow: 0 8px 25px {{ section.settings.checkout_hover_shadow_color | color_modify: 'alpha', 0.3 }};
    {%- endif -%}
  }

  .cart__checkout-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  /* Update Button */
  .cart__update-button {
    display: block;
    width: 100%;
    padding: {{ section.settings.update_padding_y }}px {{ section.settings.update_padding_x }}px;
    font-size: {{ section.settings.update_font_size }}px;
    font-weight: {{ section.settings.update_font_weight }};
    text-transform: {{ section.settings.update_text_transform }};
    letter-spacing: {{ section.settings.update_letter_spacing | divided_by: 100.0 }}em;
    text-decoration: none;
    text-align: center;
    border-radius: {{ section.settings.update_border_radius }}px;
    border: {{ section.settings.update_border_width }}px solid {{ section.settings.update_border_color }};
    background-color: {{ section.settings.update_bg_color }};
    color: {{ section.settings.update_text_color }};
    cursor: pointer;
    transition: all {{ section.settings.update_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart__update-button:hover {
    background-color: {{ section.settings.update_hover_bg_color }};
    color: {{ section.settings.update_hover_text_color }};
    border-color: {{ section.settings.update_hover_border_color }};
  }

  /* Dynamic Checkout Buttons */
  .cart__dynamic-checkout-buttons {
    margin-top: {{ section.settings.dynamic_buttons_margin_top }}px;
  }

  .additional-checkout-buttons {
    width: 100%;
  }

  /* Cart Errors */
  #cart-errors {
    margin-top: {{ section.settings.errors_margin_top }}px;
    font-size: {{ section.settings.errors_font_size }}px;
    color: {{ section.settings.errors_color }};
    text-align: center;
  }

  /* Discount Field (if present) */
  .cart-discount-field {
    margin-bottom: {{ section.settings.discount_field_margin_bottom }}px;
  }

  .cart-discount-field__input {
    width: 100%;
    padding: {{ section.settings.discount_input_padding }}px;
    font-size: {{ section.settings.discount_input_font_size }}px;
    color: {{ section.settings.discount_input_text_color }};
    background-color: {{ section.settings.discount_input_bg_color }};
    border: {{ section.settings.discount_input_border_width }}px solid {{ section.settings.discount_input_border_color }};
    border-radius: {{ section.settings.discount_input_border_radius }}px;
    margin-bottom: {{ section.settings.discount_input_margin_bottom }}px;
    transition: border-color {{ section.settings.discount_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart-discount-field__input:focus {
    outline: none;
    border-color: {{ section.settings.discount_input_focus_border_color }};
  }

  .cart-discount-field__button {
    display: block;
    width: 100%;
    padding: {{ section.settings.discount_button_padding_y }}px {{ section.settings.discount_button_padding_x }}px;
    font-size: {{ section.settings.discount_button_font_size }}px;
