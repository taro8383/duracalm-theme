  assign title = 'templates.404.title' | t
  assign button_text = 'general.continue_shopping' | t
-%}

<style type="text/css">
  /* Parent container targeting to eliminate white space */
  #MainContent,
  main#MainContent,
  .page-width,
  main {
    background-color: {{ section.settings.section_bg_color }} !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  /* Section wrapper */
  .template-404-wrapper {
    background-color: {{ section.settings.section_bg_color }};
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    min-height: {{ section.settings.section_min_height }}vh;
    display: flex;
    align-items: {{ section.settings.content_vertical_alignment }};
    justify-content: center;
  }

  /* 404 Container */
  .template-404 {
    width: 100%;
    max-width: {{ section.settings.container_max_width }}px;
    background-color: {{ section.settings.container_bg_color }};
    padding: {{ section.settings.container_padding }}px;
    border-radius: {{ section.settings.container_border_radius }}px;
    margin: {{ section.settings.container_margin_top }}px auto {{ section.settings.container_margin_bottom }}px;
    text-align: {{ section.settings.text_alignment }};
    {%- if section.settings.show_shadow -%}
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    {%- endif -%}
  }

  /* Subtext (404 Number) */
  .template-404__subtext {
    font-size: {{ section.settings.subtext_font_size }}px;
    font-weight: {{ section.settings.subtext_font_weight }};
    color: {{ section.settings.subtext_color }};
    margin: 0 0 {{ section.settings.subtext_margin_bottom }}px 0;
    line-height: {{ section.settings.subtext_line_height }};
    letter-spacing: {{ section.settings.subtext_letter_spacing | divided_by: 100.0 }}em;
  }

  /* Main Title */
  .template-404__title {
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    line-height: {{ section.settings.heading_line_height }};
    letter-spacing: {{ section.settings.heading_letter_spacing | divided_by: 100.0 }}em;
  }

  /* Description Text */
  .template-404__description {
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: {{ section.settings.description_font_weight }};
    color: {{ section.settings.description_color }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
    line-height: {{ section.settings.description_line_height }};
    letter-spacing: {{ section.settings.description_letter_spacing | divided_by: 100.0 }}em;
  }

  /* Continue Shopping Button - Magic Mind Style */
  .template-404__button {
    display: {% if section.settings.button_full_width %}block{% else %}inline-block{% endif %};
    width: {% if section.settings.button_full_width %}100%{% else %}auto{% endif %};
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing | divided_by: 100.0 }}em;
    text-decoration: none;
    text-align: center;
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    cursor: pointer;
    position: relative;
    overflow: hidden;
    z-index: 1;
    margin-top: {{ section.settings.button_margin_top }}px;
    transition: transform {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease,
                border-color {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease,
                box-shadow {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease;
  }

  {%- if section.settings.button_gradient_hover -%}
  /* Gradient hover effect using ::before pseudo-element */
  .template-404__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      {{ section.settings.button_gradient_start }} 0%,
      {{ section.settings.button_gradient_middle }} 50%,
      {{ section.settings.button_gradient_end }} 100%
    );
    opacity: 0;
    z-index: -1;
    transition: opacity {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease;
  }

  .template-404__button:hover::before {
    opacity: 1;
  }
  {%- endif -%}

  .template-404__button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY({{ section.settings.button_hover_translate_y }}px);
    {%- if section.settings.button_hover_shadow -%}
    box-shadow: 0 8px 25px {{ section.settings.button_hover_shadow_color | color_modify: 'alpha', 0.3 }};
    {%- endif -%}
  }

  /* Search Section */
  .template-404__search {
    margin-top: {{ section.settings.search_margin_top }}px;
  }

  .template-404__search-label {
    font-size: {{ section.settings.search_label_font_size }}px;
    font-weight: {{ section.settings.search_label_font_weight }};
    color: {{ section.settings.search_label_color }};
    margin-bottom: {{ section.settings.search_label_margin_bottom }}px;
    display: block;
  }

  .template-404__search-form {
    display: flex;
    gap: {{ section.settings.search_gap }}px;
    max-width: {{ section.settings.search_max_width }}px;
    margin: 0 auto;
  }

  .template-404__search-input {
    flex: 1;
    padding: {{ section.settings.input_padding }}px;
    font-size: {{ section.settings.input_font_size }}px;
    background-color: {{ section.settings.input_bg_color }};
    color: {{ section.settings.input_text_color }};
    border: {{ section.settings.input_border_width }}px solid {{ section.settings.input_border_color }};
    border-radius: {{ section.settings.input_border_radius }}px;
    transition: border-color {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease;
  }

  .template-404__search-input:focus {
    outline: none;
    border-color: {{ section.settings.input_focus_border_color }};
  }

  .template-404__search-input::placeholder {
    color: {{ section.settings.input_text_color | color_modify: 'alpha', 0.5 }};
  }

  .template-404__search-button {
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing | divided_by: 100.0 }}em;
    text-decoration: none;
    text-align: center;
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    cursor: pointer;
    position: relative;
    overflow: hidden;
    z-index: 1;
    transition: transform {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease,
                border-color {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease;
  }

  {%- if section.settings.button_gradient_hover -%}
  .template-404__search-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      {{ section.settings.button_gradient_start }} 0%,
      {{ section.settings.button_gradient_middle }} 50%,
      {{ section.settings.button_gradient_end }} 100%
    );
    opacity: 0;
    z-index: -1;
    transition: opacity {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease;
  }

  .template-404__search-button:hover::before {
    opacity: 1;
  }
  {%- endif -%}

  .template-404__search-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY({{ section.settings.button_hover_translate_y }}px);
    {%- if section.settings.button_hover_shadow -%}
    box-shadow: 0 8px 25px {{ section.settings.button_hover_shadow_color | color_modify: 'alpha', 0.3 }};
    {%- endif -%}
  }

  /* Responsive */
  @media screen and (max-width: 749px) {
    .template-404 {
      padding: {{ section.settings.container_padding | divided_by: 2 }}px;
      margin-left: {{ section.settings.container_margin_mobile }}px;
      margin-right: {{ section.settings.container_margin_mobile }}px;
    }

    .template-404__title {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }

    .template-404__subtext {
      font-size: {{ section.settings.subtext_font_size_mobile }}px;
    }

    .template-404__search-form {
      flex-direction: column;
    }

    .template-404__search-button {
      width: 100%;
    }
  }
</style>

<div class="template-404-wrapper">
  <div class="template-404">
    {%- if section.settings.show_subtext -%}
      <p class="template-404__subtext">
        {{ subtext }}
      </p>
    {%- endif -%}

    <h1 class="template-404__title">
      {{ title }}
    </h1>

    {%- if section.settings.show_description -%}
      <p class="template-404__description">
        {{ section.settings.description_text }}
      </p>
    {%- endif -%}

    {%- if section.settings.show_continue_button -%}
      <a href="{{ routes.all_products_collection_url }}" class="template-404__button">
        {{ button_text }}
      </a>
    {%- endif -%}

    {%- if section.settings.show_search -%}
      <div class="template-404__search">
        {%- if section.settings.search_label != blank -%}
          <label class="template-404__search-label" for="404-search">
            {{ section.settings.search_label }}
          </label>
        {%- endif -%}
        <form action="{{ routes.search_url }}" method="get" class="template-404__search-form" role="search">
          <input
            type="search"
            name="q"
            id="404-search"
            class="template-404__search-input"
            placeholder="{{ section.settings.search_placeholder }}"
            aria-label="{{ section.settings.search_placeholder }}"
          >
          <button type="submit" class="template-404__search-button">
            {{ section.settings.search_button_text }}
          </button>
        </form>
      </div>
    {%- endif -%}
  </div>
</div>

