{%- comment -%} Magic Mind Cart Items with Theme Editor Controls {%- endcomment -%}

{%- style -%}
  /* Cart section specific styling */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Cart Page Wrapper */
  .cart-page-wrapper {
    background-color: {{ section.settings.section_bg_color }};
    min-height: {{ section.settings.section_min_height }}vh;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }

  /* Cart Container */
  .cart-container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_side_padding }}px;
  }

  /* Title Wrapper */
  .cart-title-wrapper {
    text-align: {{ section.settings.title_alignment }};
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
  }

  .cart-title-wrapper h1 {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.title_spacing }}px 0;
    letter-spacing: {{ section.settings.title_letter_spacing | divided_by: 100.0 }}em;
  }

  .cart-title-wrapper .underlined-link {
    font-size: {{ section.settings.continue_shopping_font_size }}px;
    color: {{ section.settings.continue_shopping_color }};
    text-decoration: {{ section.settings.continue_shopping_decoration }};
    transition: color {{ section.settings.link_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart-title-wrapper .underlined-link:hover {
    color: {{ section.settings.continue_shopping_hover_color }};
  }

  /* Empty Cart State */
  .cart__warnings {
    background-color: {{ section.settings.empty_container_bg }};
    padding: {{ section.settings.empty_container_padding }}px;
    border-radius: {{ section.settings.empty_container_radius }}px;
    text-align: center;
    max-width: {{ section.settings.empty_container_max_width }}px;
    margin: 0 auto;
    {%- if section.settings.empty_show_shadow -%}
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    {%- endif -%}
  }

  .cart__empty-text {
    font-size: {{ section.settings.empty_title_font_size }}px;
    font-weight: {{ section.settings.empty_title_font_weight }};
    color: {{ section.settings.empty_title_color }};
    margin: 0 0 {{ section.settings.empty_title_margin_bottom }}px 0;
  }

  .cart__warnings .button {
    display: {% if section.settings.empty_button_full_width %}block{% else %}inline-block{% endif %};
    width: {% if section.settings.empty_button_full_width %}100%{% else %}auto{% endif %};
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing | divided_by: 100.0 }}em;
    text-decoration: none;
    text-align: center;
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    cursor: pointer;
    position: relative;
    overflow: hidden;
    z-index: 1;
    margin-top: {{ section.settings.button_margin_top }}px;
    transition: transform {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease,
                border-color {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease,
                box-shadow {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease;
  }

  {%- if section.settings.button_gradient_hover -%}
  .cart__warnings .button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      {{ section.settings.button_gradient_start }} 0%,
      {{ section.settings.button_gradient_middle }} 50%,
      {{ section.settings.button_gradient_end }} 100%
    );
    opacity: 0;
    z-index: -1;
    transition: opacity {{ section.settings.button_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart__warnings .button:hover::before {
    opacity: 1;
  }
  {%- endif -%}

  .cart__warnings .button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY({{ section.settings.button_hover_translate_y }}px);
    {%- if section.settings.button_hover_shadow -%}
    box-shadow: 0 8px 25px {{ section.settings.button_hover_shadow_color | color_modify: 'alpha', 0.3 }};
    {%- endif -%}
  }

  .cart__login-title {
    font-size: {{ section.settings.login_title_font_size }}px;
    font-weight: {{ section.settings.login_title_font_weight }};
    color: {{ section.settings.login_title_color }};
    margin: {{ section.settings.login_title_margin_top }}px 0 {{ section.settings.login_title_margin_bottom }}px 0;
  }

  .cart__login-paragraph {
    font-size: {{ section.settings.login_text_font_size }}px;
    color: {{ section.settings.login_text_color }};
    margin: 0;
  }

  .cart__login-paragraph a {
    color: {{ section.settings.login_link_color }};
    text-decoration: {{ section.settings.login_link_decoration }};
  }

  .cart__login-paragraph a:hover {
    color: {{ section.settings.login_link_hover_color }};
  }

  /* Cart Items Table */
  .cart-items {
    width: 100%;
    border-collapse: collapse;
  }

  .cart-items thead {
    background-color: {{ section.settings.table_header_bg }};
    border-bottom: {{ section.settings.table_header_border_width }}px solid {{ section.settings.table_header_border_color }};
  }

  .cart-items th {
    font-size: {{ section.settings.table_header_font_size }}px;
    font-weight: {{ section.settings.table_header_font_weight }};
    color: {{ section.settings.table_header_color }};
    text-transform: {{ section.settings.table_header_text_transform }};
    letter-spacing: {{ section.settings.table_header_letter_spacing | divided_by: 100.0 }}em;
    padding: {{ section.settings.table_header_padding_y }}px {{ section.settings.table_header_padding_x }}px;
    text-align: left;
  }

  .cart-items th.right {
    text-align: right;
  }

  /* Cart Item Row */
  .cart-item {
    border-bottom: {{ section.settings.table_row_border_width }}px solid {{ section.settings.table_row_border_color }};
    transition: background-color {{ section.settings.table_row_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart-item:hover {
    background-color: {{ section.settings.table_row_hover_bg }};
  }

  .cart-item td {
    padding: {{ section.settings.table_cell_padding_y }}px {{ section.settings.table_cell_padding_x }}px;
    vertical-align: top;
  }

  /* Product Image */
  .cart-item__media {
    width: {{ section.settings.image_width }}px;
    min-width: {{ section.settings.image_width }}px;
  }

  .cart-item__image-container {
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: {{ section.settings.image_bg_color }};
    {%- if section.settings.image_show_shadow -%}
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    {%- endif -%}
  }

  .cart-item__image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Product Details */
  .cart-item__name {
    font-size: {{ section.settings.product_name_font_size }}px;
    font-weight: {{ section.settings.product_name_font_weight }};
    color: {{ section.settings.product_name_color }};
    text-decoration: none;
    display: block;
    margin-bottom: {{ section.settings.product_name_margin_bottom }}px;
    transition: color {{ section.settings.link_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart-item__name:hover {
    color: {{ section.settings.product_name_hover_color }};
  }

  .cart-item__details .caption-with-letter-spacing {
    font-size: {{ section.settings.vendor_font_size }}px;
    color: {{ section.settings.vendor_color }};
    text-transform: uppercase;
    letter-spacing: {{ section.settings.vendor_letter_spacing | divided_by: 100.0 }}em;
    margin: 0 0 {{ section.settings.vendor_margin_bottom }}px 0;
  }

  /* Price Styling */
  .cart-item__details .product-option {
    font-size: {{ section.settings.price_font_size }}px;
    font-weight: {{ section.settings.price_font_weight }};
    color: {{ section.settings.price_color }};
    margin: 0;
  }

  .cart-item__old-price {
    font-size: {{ section.settings.price_font_size }}px;
    color: {{ section.settings.old_price_color }};
    text-decoration: line-through;
    margin-right: {{ section.settings.price_spacing }}px;
  }

  .cart-item__final-price {
    font-size: {{ section.settings.price_font_size }}px;
    font-weight: {{ section.settings.price_font_weight }};
    color: {{ section.settings.sale_price_color }};
  }

  /* Variant Options */
  .cart-item__details dl {
    margin: {{ section.settings.variant_margin_top }}px 0 0 0;
  }

  .cart-item__details .product-option {
    font-size: {{ section.settings.variant_font_size }}px;
    color: {{ section.settings.variant_color }};
    margin: 0 0 {{ section.settings.variant_spacing }}px 0;
  }

  .cart-item__details .product-option dt {
    font-weight: {{ section.settings.variant_label_weight }};
    color: {{ section.settings.variant_label_color }};
  }

  /* Discounts */
  .discounts {
    margin: {{ section.settings.discount_margin_top }}px 0 0 0;
    padding: 0;
    list-style: none;
  }

  .discounts__discount {
    font-size: {{ section.settings.discount_font_size }}px;
    color: {{ section.settings.discount_color }};
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .discounts__discount svg {
    width: {{ section.settings.discount_icon_size }}px;
    height: {{ section.settings.discount_icon_size }}px;
    color: {{ section.settings.discount_icon_color }};
  }

  /* Quantity Selector */
  .cart-item__quantity-wrapper {
    display: flex;
    align-items: center;
    gap: {{ section.settings.quantity_gap }}px;
  }

  .quantity.main-quantity {
    border: {{ section.settings.quantity_border_width }}px solid {{ section.settings.quantity_border_color }};
    border-radius: {{ section.settings.quantity_border_radius }}px;
    background-color: {{ section.settings.quantity_bg_color }};
  }

  .quantity__button {
    width: {{ section.settings.quantity_button_width }}px;
    height: {{ section.settings.quantity_button_height }}px;
    background-color: {{ section.settings.quantity_button_bg }};
    color: {{ section.settings.quantity_button_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color {{ section.settings.quantity_transition_duration | divided_by: 10.0 }}s ease;
  }

  .quantity__button:hover {
    background-color: {{ section.settings.quantity_button_hover_bg }};
  }

  .quantity__input {
    width: {{ section.settings.quantity_input_width }}px;
    height: {{ section.settings.quantity_button_height }}px;
    border: none;
    background-color: transparent;
    text-align: center;
    font-size: {{ section.settings.quantity_font_size }}px;
    font-weight: {{ section.settings.quantity_font_weight }};
    color: {{ section.settings.quantity_text_color }};
    -moz-appearance: textfield;
  }

  .quantity__input::-webkit-outer-spin-button,
  .quantity__input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  /* Remove Button */
  .cart-remove-button .button--tertiary {
    width: {{ section.settings.remove_button_size }}px;
    height: {{ section.settings.remove_button_size }}px;
    border-radius: {{ section.settings.remove_button_radius }}px;
    background-color: {{ section.settings.remove_button_bg }};
    color: {{ section.settings.remove_button_color }};
    border: {{ section.settings.remove_button_border_width }}px solid {{ section.settings.remove_button_border_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    transition: all {{ section.settings.remove_transition_duration | divided_by: 10.0 }}s ease;
  }

  .cart-remove-button .button--tertiary:hover {
    background-color: {{ section.settings.remove_button_hover_bg }};
    color: {{ section.settings.remove_button_hover_color }};
    border-color: {{ section.settings.remove_button_hover_border_color }};
  }

  .cart-remove-button .button--tertiary svg {
    width: {{ section.settings.remove_icon_size }}px;
    height: {{ section.settings.remove_icon_size }}px;
  }

  /* Item Totals */
  .cart-item__totals .price {
    font-size: {{ section.settings.total_font_size }}px;
    font-weight: {{ section.settings.total_font_weight }};
    color: {{ section.settings.total_color }};
  }

  .cart-item__totals .cart-item__old-price.price {
    font-size: {{ section.settings.total_old_font_size }}px;
    color: {{ section.settings.total_old_color }};
    font-weight: 400;
  }

  /* Loading Overlay */
  .loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ section.settings.loading_overlay_bg | color_modify: 'alpha', 0.8 }};
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }

  .loading-overlay.hidden {
    display: none;
  }

  .loading-overlay__spinner .spinner {
    width: {{ section.settings.loading_spinner_size }}px;
    height: {{ section.settings.loading_spinner_size }}px;
    color: {{ section.settings.loading_spinner_color }};
  }

  /* Error Message */
  .cart-item__error {
    margin-top: {{ section.settings.error_margin_top }}px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .cart-item__error-text {
    font-size: {{ section.settings.error_font_size }}px;
    color: {{ section.settings.error_color }};
  }

  .cart-item__error .icon-error {
    width: {{ section.settings.error_icon_size }}px;
    height: {{ section.settings.error_icon_size }}px;
    flex-shrink: 0;
  }

  /* Unit Price */
  .unit-price {
    font-size: {{ section.settings.unit_price_font_size }}px;
    color: {{ section.settings.unit_price_color }};
    margin-top: {{ section.settings.unit_price_margin_top }}px;
  }

  /* Responsive */
  @media screen and (max-width: 749px) {
    .cart-container {
      padding: 0 {{ section.settings.container_side_padding_mobile }}px;
    }

    .cart-title-wrapper h1 {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }

    .cart-item__media {
      width: {{ section.settings.image_width_mobile }}px;
      min-width: {{ section.settings.image_width_mobile }}px;
    }

    .cart-items th,
    .cart-items td {
      padding: {{ section.settings.table_cell_padding_y_mobile }}px {{ section.settings.table_cell_padding_x_mobile }}px;
    }

    .cart-item__name {
      font-size: {{ section.settings.product_name_font_size_mobile }}px;
    }
  }
{%- endstyle -%}

<div class="cart-page-wrapper">
  <div class="cart-container">
    <cart-items class="{% if cart == empty %} is-empty{% else %} section-{{ section.id }}-padding{% endif %}">
      <div class="cart-title-wrapper">
        <h1>{{ 'sections.cart.title' | t }}</h1>
        <a href="{% if settings.continue_shopping_url == blank %}{{ routes.all_products_collection_url }}{% else %}{{ settings.continue_shopping_url }}{% endif %}" class="underlined-link">
          {{ 'general.continue_shopping' | t }}
        </a>
      </div>

      <div class="cart__warnings">
        <h1 class="cart__empty-text">{{ 'sections.cart.empty' | t }}</h1>
        {% if settings.display_continue_shopping %}
          <a href="{% if settings.continue_shopping_url == blank %}{{ routes.all_products_collection_url }}{% else %}{{ settings.continue_shopping_url }}{% endif %}" class="button">
            {{ 'general.continue_shopping' | t }}
          </a>
        {% endif %}

        {%- if shop.customer_accounts_enabled and customer == null -%}
          <h2 class="cart__login-title">{{ 'sections.cart.login.title' | t }}</h2>
          <p class="cart__login-paragraph">
            {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
          </p>
        {%- endif -%}
      </div>

      <form action="{{ routes.cart_url }}" class="cart__contents critical-hidden" method="post" id="cart">
        <div class="cart__items" id="main-cart-items" data-id="{{ section.id }}">
          <div class="js-contents">
            {%- if cart != empty -%}
              <table class="cart-items">
                <caption class="visually-hidden">
                  {{ 'sections.cart.title' | t }}
                </caption>
                <thead>
                  <tr>
                    <th class="caption-with-letter-spacing" colspan="2" scope="col">
                      {{ 'sections.cart.headings.product' | t }}
                    </th>
                    <th class="medium-hide large-up-hide right caption-with-letter-spacing" colspan="1" scope="col">
                      {{ 'sections.cart.headings.total' | t }}
                    </th>
                    <th class="cart-items__heading--wide small-hide caption-with-letter-spacing" colspan="1" scope="col">
                      {{ 'sections.cart.headings.quantity' | t }}
                    </th>
                    <th class="small-hide right caption-with-letter-spacing" colspan="1" scope="col">
                      {{ 'sections.cart.headings.total' | t }}
                    </th>
                  </tr>
                </thead>

                <tbody>
                  {%- for item in cart.items -%}
                    <tr
                      class="cart-item cart-item--product-{{ item.product.handle }}"
                      id="CartItem-{{ item.index | plus: 1 }}"
                      data-quantity="{{ item.quantity }}"
                      data-key="{{ item.key }}"
                    >
                      <td class="cart-item__media">
                        {% if item.image %}
                          {% comment %} Leave empty space due to a:empty CSS display: none rule {% endcomment %}
                          <a href="{{ item.url }}" class="cart-item__link" aria-hidden="true" tabindex="-1"> </a>
                          <div class="cart-item__image-container">
                            <img
                              src="{{ item.image | image_url: width: 300 }}"
                              class="cart-item__image"
                              alt="{{ item.image.alt | escape }}"
                              loading="lazy"
                              width="150"
                              height="{{ 150 | divided_by: item.image.aspect_ratio | ceil }}"
                            >
                          </div>
                        {% endif %}
                      </td>

                      <td class="cart-item__details">
                        {%- if settings.show_vendor -%}
                          <p class="caption-with-letter-spacing">{{ item.product.vendor }}</p>
                        {%- endif -%}

                        <a href="{{ item.url }}" class="cart-item__name h4 break">{{ item.product.title | escape }}</a>

                        {%- if item.original_price != item.final_price -%}
                          <div class="cart-item__discounted-prices">
                            <span class="visually-hidden">
                              {{ 'products.product.price.regular_price' | t }}
                            </span>
                            <s class="cart-item__old-price product-option">
                              {{- item.original_price | money -}}
                            </s>
                            <span class="visually-hidden">
                              {{ 'products.product.price.sale_price' | t }}
                            </span>
                            <strong class="cart-item__final-price product-option">
                              {{ item.final_price | money }}
                            </strong>
                          </div>
                        {%- else -%}
                          <div class="product-option">
                            {{ item.original_price | money }}
                          </div>
                        {%- endif -%}

                        {%- if item.product.has_only_default_variant == false
                          or item.properties.size != 0
                          or item.selling_plan_allocation != null
                        -%}
                          <dl>
                            {%- if item.product.has_only_default_variant == false -%}
                              {%- for option in item.options_with_values -%}
                                <div class="product-option">
                                  <dt>{{ option.name }}:</dt>
                                  <dd>{{ option.value }}</dd>
                                </div>
                              {%- endfor -%}
                            {%- endif -%}

                            {%- for property in item.properties -%}
                              {%- assign property_first_char = property.first | slice: 0 -%}
                              {%- if property.last != blank and property_first_char != '_' -%}
                                <div class="product-option">
                                  <dt>{{ property.first }}:</dt>
                                  <dd>
                                    {%- if property.last contains '/uploads/' -%}
                                      <a href="{{ property.last }}" class="link" target="_blank">
                                        {{ property.last | split: '/' | last }}
                                      </a>
                                    {%- else -%}
                                      {{ property.last }}
                                    {%- endif -%}
                                  </dd>
                                </div>
                              {%- endif -%}
                            {%- endfor -%}
                          </dl>

                          <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                        {%- endif -%}

                        <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                          {%- for discount in item.discounts -%}
                            <li class="discounts__discount">
                              {%- render 'icon-discount' -%}
                              {{ discount.title }}
                            </li>
                          {%- endfor -%}
                        </ul>
                      </td>

                      <td class="cart-item__totals right medium-hide large-up-hide">
                        <div class="loading-overlay hidden">
                          <div class="loading-overlay__spinner">
                            <svg
                              aria-hidden="true"
                              focusable="false"
                              class="spinner"
                              viewBox="0 0 66 66"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                            </svg>
                          </div>
                        </div>
                        <div class="cart-item__price-wrapper">
                          {%- if item.original_line_price != item.final_line_price -%}
                            <dl class="cart-item__discounted-prices">
                              <dt class="visually-hidden">
                                {{ 'products.product.price.regular_price' | t }}
                              </dt>
                              <dd>
                                <s class="cart-item__old-price price price--end">
                                  {{ item.original_line_price | money }}
                                </s>
                              </dd>
                              <dt class="visually-hidden">
                                {{ 'products.product.price.sale_price' | t }}
                              </dt>
                              <dd class="price price--end">
                                {{ item.final_line_price | money }}
                              </dd>
                            </dl>
                          {%- else -%}
                            <span class="price price--end">
                              {{ item.original_line_price | money }}
                            </span>
                          {%- endif -%}

                          {%- if item.variant.available and item.unit_price_measurement -%}
                            <div class="unit-price caption">
                              <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                              {{ item.variant.unit_price | money }}
                              <span aria-hidden="true">/</span>
                              <span class="visually-hidden"
                                >&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span
                              >
                              {%- if item.variant.unit_price_measurement.reference_value != 1 -%}
                                {{- item.variant.unit_price_measurement.reference_value -}}
                              {%- endif -%}
                              {{ item.variant.unit_price_measurement.reference_unit }}
                            </div>
                          {%- endif -%}
                        </div>
                      </td>

                      <td class="cart-item__quantity">
                        <div class="cart-item__quantity-wrapper">
                          <label class="visually-hidden" for="Quantity-{{ item.index | plus: 1 }}">
                            {{ 'products.product.quantity.label' | t }}
                          </label>
                          <quantity-input class="quantity main-quantity cart-quantity">
                            <button class="quantity__button no-js-hidden" name="minus" type="button">
                              <span class="visually-hidden">
                                {{- 'products.product.quantity.decrease' | t: product: item.product.title | escape -}}
                              </span>
                              {% render 'icon-minus' %}
                            </button>
                            <input
                              class="quantity__input"
                              data-quantity-variant-id="{{ item.variant.id }}"
                              type="number"
                              name="updates[]"
                              value="{{ item.quantity }}"
                              {% # theme-check-disable %}
                              data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                              min="{{ item.variant.quantity_rule.min }}"
                              {% if item.variant.quantity_rule.max != null %}
                                max="{{ item.variant.quantity_rule.max }}"
                              {% endif %}
                              step="{{ item.variant.quantity_rule.increment }}"
                              {% # theme-check-enable %}
                              aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                              id="Quantity-{{ item.index | plus: 1 }}"
                              data-index="{{ item.index | plus: 1 }}"
                              data-line-item-key="{{ item.key }}"
                            >
                            <button class="quantity__button no-js-hidden" name="plus" type="button">
                              <span class="visually-hidden">
                                {{- 'products.product.quantity.increase' | t: product: item.product.title | escape -}}
                              </span>
                              {% render 'icon-plus' %}
                            </button>
                          </quantity-input>

                          <cart-remove-button
                            id="Remove-{{ item.index | plus: 1 }}"
                            data-index="{{ item.index | plus: 1 }}"
                            data-line-item-key="{{ item.key }}"
                          >
                            <a
                              href="{{ item.url_to_remove }}"
                              class="button button--tertiary"
                              aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                            >
                              {% render 'icon-remove' %}
                            </a>
                          </cart-remove-button>
                        </div>
